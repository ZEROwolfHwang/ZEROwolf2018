<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="70dp"
              android:id="@+id/item_recycler_view_preview"
              android:background="#e4f6f2"
              android:orientation="horizontal">


    <TextView
        android:id="@+id/preview_text_car_number"
        android:layout_weight="4"
        android:text="车牌号"
        style="@style/layout_dragft_activity_style_content"/>
    <TextView
        android:layout_weight="4"
        android:id="@+id/preview_text_shutTime"
        android:text="保存时间"
        style="@style/layout_dragft_activity_style_content"/>
    <TextView
        android:layout_weight="3"
        android:text="检查人"
        android:id="@+id/preview_text_check"
        style="@style/layout_dragft_activity_style_content"/>
    <TextView
        android:layout_weight="3"
        android:id="@+id/preview_text_login"
        android:text="登记人"
        style="@style/layout_dragft_activity_style_content"/>

    <LinearLayout
        android:layout_weight="3"
        android:padding="16dp"
        style="@style/layout_dragft_activity_style_content"
        >

    <ImageView
        android:layout_height="match_parent"
        android:id="@+id/preview_img_isPass"
        android:layout_width="match_parent"
        android:background="@drawable/ispass_yes"
        />
    </LinearLayout>
</LinearLayout>


